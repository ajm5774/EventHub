@model List<EventHub.Models.Group>
<div>
    <div class="row text-center">
        <h4>My Groups</h4>
    </div>
    <div>
        @foreach (var group in Model)
        {
            <div class="group">
                @using (Html.BeginForm("Remove", "Group", FormMethod.Post))
                {
                    <img src="@group.PicturePath" class="pictureBorder" width="40" height="40" />

                    @Html.ActionLink(@group.Name, "Details", "Group", new { id = @group.Id }, htmlAttributes: new { })
                    @Html.AntiForgeryToken()
                    @Html.Hidden("GroupId", @group.Id, new { @class = "form-control commentTextArea" })
                    <br/><br/>
                    <input type="submit" class="btn btn-default" value="-unSubscribe" />
                }
            </div>
        }
    </div>
</div>
