@model EventHub.Models.Event
@{
    ViewBag.Title = "Create Event";
    Layout = null;
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
            <div>
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Title, new { @class = "col-md-12" })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Description, new {@id = "description", @class = "col-md-12" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateTime, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.DateTime, new { @id = "eventDate", @class = "col-md-12" })
                        @Html.ValidationMessageFor(model => model.DateTime)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Place, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Place, new { @class = "col-md-12" })
                        @Html.ValidationMessageFor(model => model.Place)
                    </div>
                </div>

                @Html.HiddenFor(model => model.GroupId)
                @Html.ValidationMessageFor(model => model.GroupId)
            </div>
        <div class="col-md-12">
            <center>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </center>
        </div>
    </div>
    
}

@section scripts
{
<script type="text/javascript">
    $(function () {
        $('#description').css('overflow', 'hidden').autogrow();
        $("#eventDate").datepicker();
    });
</script>
}