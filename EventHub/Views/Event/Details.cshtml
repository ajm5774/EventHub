@model EventHub.Models.Event

@{
    ViewBag.Title = "Details";
}

<div>
    <br/>
    <div class="col-md-3">
        @{
            int attending = 0;
            bool isAdmin = false;
            foreach(EventHub.Models.GroupSubscription gsub in Model.Group.GroupSubscriptions)
            {
                if(gsub.AspNetUser.UserName == User.Identity.Name && gsub.IsAdministrator == true)
                {
                    isAdmin = true;
                }
            }
            foreach (EventHub.Models.EventUserReply reply in Model.EventReplies)
            {
                if(reply.Reply == EventHub.Models.EventReply.Going)
                {
                    attending++;
                }
            }
        }

        @if(@Model.EventPictures.Any())
        {
            <img src="@Model.EventPictures.First().PicturePath" class="mainPicture"/>
        }
        else
        {
            <img src="Content\Images\testImages\group_default.png" class="mainPicture"/>
        }
        <h4>@attending People Attending</h4>
        
        @{
            bool userReplied = true;
            foreach(EventHub.Models.EventUserReply reply in Model.EventReplies)
            {
                if (reply.AspNetUser.UserName == User.Identity.Name && reply.Reply == 0)
                {
                    userReplied = false;
                }
            }
        }

        @{
            if (userReplied)
            {
                using (Html.BeginForm("In", "Event", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("EventId", Model.Id)
            
                    <br />
                    <input type="submit" class="btn btn-default" value="+I'm In!" />
                }
            }
            else
            {
                using (Html.BeginForm("Out", "Event", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("EventId", Model.Id)
            
                    <br />
                    <input type="submit" class="btn btn-default" value="-I'm Out!" />
                }   
            }
        }
        <br/>
       
    </div>
    <div class =" col-md-6">
        <div class="event-info">
            <h2>@Model.Title</h2>
            <h4>Hosted by <a href="/Group/Details/@Model.GroupId">@Model.Group.Name</a></h4>
            
            <br />
            @Html.DisplayFor(model => model.Description)
            <br />
            <br />
            <strong>Time: @Model.DateTime</strong><br />
            <strong>Location: @Model.Place</strong><br />

            @if (Model.Comments.Any())
            {
                <p>Comments:</p>
                <div class="comments">
                    @foreach (EventHub.Models.Comment comment in Model.Comments)
                    {
                        <div class="comment col-md-12">
                            <table>
                                <tr>
                                    <td>
                                        <img src="@comment.AspNetUser.PicturePath" class="pictureBorder" height="50" width="50" />
                                    </td>
                                    <td>
                                        @comment.Message
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }

                </div>
            }
            <br />
            <div class="col-md-12 col-md-offset-0">
                @using (Html.BeginForm("EventCreate", "Comment", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("EventId", Model.Id)
                    @Html.TextArea("Message", new { @class = "form-control commentTextArea", @placeholder = "Add Comment" })

                    <div class="form-group">
                        <div class="text-right">
                            <input type="submit" class="btn btn-default" value="Add Comment" />
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
<p>
    @if (isAdmin == true)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id });
    }
    
</p>
